<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite de TestNG">

	<test name="Plano de test de grupos">
		<groups>
			<run>
				<include name="test.*"></include>
				
			</run>
		</groups>
		<packages>
			<package name="br.com.projeto.tests"></package>
			<package name="br.com.projeto.tests"></package>
		</packages>
	</test>



